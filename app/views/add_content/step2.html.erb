<h1>Add Content: Step 1</h1>
<p>Enter your page content </p>


<%= render "shared/simple_error_messages", :target => @add_content_step2_command %>
<%= form_for(@add_content_step2_command, :url => {:action => 'step2_complete'} ) do |f| %>
<table class="form">
 <tr>
   <td class="label"><%= f.label :content, 'Page content:' %></td>
   <td class="field"><%= f.text_area :content %></td>
 </tr>
</table>
<%= f.submit :value => 'Continue' %>
<% end %>

