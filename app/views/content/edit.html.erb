<h2 class="header">Edit: <span class="highlight"><%= @content_item.name%><span></h2>

<%= render "shared/simple_error_messages", :target => @update_content_command %>
<%= form_for(@update_content_command, :url => {:action => 'update', :id => @content_item.id} ) do |f| %>
   <div class="field"><%= f.text_area :content,  {:cols => 80, :rows => 20, :class => 'enter_content'} %></div>
<%= f.submit :value => 'Update', :class => 'submit' %>
<%= f.submit :value => 'Cancel', :class => 'cancel' %>
<% end %>


